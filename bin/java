#!/bin/bash

# java -jar <jar> generate -i <input> -l <links> [-t <tpls>] -o <output>

injar=
inyml=
tpls=
links=
output=
mounts=

cmd="java"
while [ -n "$1" ]; do
  case $1 in
    -jar)
      injar=$2;
      mounts="$mounts -v $injar:/tmp/jar.jar"
      cmd="$cmd -jar /tmp/jar.jar";
      shift;;
    -i)
      inyml=$2;
      cmd="$cmd -i /tmp/yml.yml";
      mounts="$mounts -v $PWD/$inyml:/tmp/yml.yml"
      shift;;
    -t)
      tpls=$2;
      mounts="$mounts -v ${PWD}/$tpls:/tmp/$tpls"
      cmd="$cmd -t /tmp/$tpls";
      shift;;
    -l)
      links=$2;
      cmd="$cmd -l $links";
      shift;;
    -o)
      output=$2;
      mounts="$mounts -v ${PWD}/$output:/tmp/$output"
      cmd="$cmd -o /tmp/$output";
      shift;;
    -l)
      cmd="$cmd -l $2";
      shift;;
    *) cmd="$cmd $1";;
  esac
  shift
done

echo "injar:  $injar"
echo "inyml:  $inyml"
echo "tpls:   $tpls"
echo "links:  $links"
echo "output: $output"
echo "mounts: $mounts"
echo "cmd:    $cmd"

docker run \
  $mounts \
  --user="$(id -u):$(id -g)" \
  --workdir=/tmp \
  -it --rm --name java7 openjdk:7 \
  bash -c "$cmd"
