#!/bin/bash

# set -x
# exec > /tmp/kb.log 2>&1

declare -A nameToLaunchCommand=(\
  [sublime]=sub \
  [chrome]=$HOME/bin/google \
  [brave]=$HOME/bin/google \
)

declare -A defaulted=(\
  [slack]=false \
)

if [ -z "$(pgrep $1)" ] || ! ${defaulted[${1-false}]}; then
  if ! [ -z ${nameToLaunchCommand[$1]} ]; then
    ${nameToLaunchCommand[$1]}
  else
    $*
  fi
else
  $HOME/bin/bf $1
fi
